                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="edu.wpi.cs.loginactivity.AndroidEventFull" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
              <activity android:name="edu.wpi.cs.loginactivity.AndroidCommitmentFull"
